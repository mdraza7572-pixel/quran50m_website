        const input = document.getElementById("userInput");
        const text = input.value.trim();
        if(!text) return;

        appendMessage(text, "user-msg");
        input.value = "";

        const loading = appendMessage("Soch raha hoon...", "bot-msg");

        try{
            const res = await fetch(API_URL, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    contents: [{
                        parts: [{
                            text: "You are a helpful Islamic assistant for Quran 50M. Reply briefly in Hinglish/Urdu. Question: " + text
                        }]
                    }]
                })
            });

            const data = await res.json();
            
            if(data.error) {
                loading.innerText = "Error: " + data.error.message;
            } else {
                loading.innerText = data.candidates?.[0]?.content?.parts?.[0]?.text || "Jawab nahi mila.";
            }

        } catch(e){
            loading.innerText = "Network error ‚ùå";
        }
    }
</script>
    

</body>
</html>
